{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "amd",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "target/classes/static",
    "sourceMap": true,
    "allowJs": true,
    "sourceRoot": "src/main/resources/static",
    "importHelpers": true
  },
  "include": [
    "src/main/resources/static/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/main/resources/static/node_modules",
    "src/main/resources/static/bower_components",
    "src/main/resources/static/js/vendor"
  ]
}
